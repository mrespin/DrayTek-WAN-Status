<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Company>-</Company>
    <Authors>Jens Willmer; enhancments: Jac Mika</Authors>
    <Description>The app collects the WAN status message that is send via UDP or Telent from a DrayTek modem to your machine.</Description>
    <AssemblyVersion>1.1.*</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
	<Deterministic>false</Deterministic>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <ApplicationIcon>MONITR01.ICO</ApplicationIcon>
    <Win32Resource />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="InfluxData.Net" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Telnet" Version="0.8.1" />
  </ItemGroup>

</Project>